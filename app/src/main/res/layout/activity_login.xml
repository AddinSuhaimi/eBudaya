<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92754B"
    tools:context=".Activities.LoginActivity">

    <TextView
        android:id="@+id/TVLoginTitle"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="28dp"
        android:text="Log In"
        android:textColor="#FBEFEF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVLoginDesc"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="588dp"
        android:text="Welcome back!"
        android:textColor="#FBEFEF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ETPassword"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="316dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BTNLogin"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="236dp"
        android:background="#FCBB4A"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="Log In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SignUpClick"
        android:layout_width="204dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="176dp"
        android:clickable="true"
        android:onClick="onSignUpClicked"
        android:text="Done have an account? Sign Up"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TVOr"
        android:layout_width="82dp"
        android:layout_height="44dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="112dp"
        android:text="OR"
        android:textColor="#FBEFEF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BTNLoginGoogle"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="44dp"
        android:background="#FCBB4A"
        android:singleLine="false"
        android:soundEffectsEnabled="false"
        android:text="Log In using Google Account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/LoginProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/BTNLogin"
        app:layout_constraintEnd_toEndOf="@+id/BTNLogin"
        app:layout_constraintStart_toStartOf="@+id/BTNLogin"
        app:layout_constraintTop_toTopOf="@+id/BTNLogin" />

    <ProgressBar
        android:id="@+id/LoginGoogleProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/BTNLoginGoogle"
        app:layout_constraintEnd_toEndOf="@+id/BTNLoginGoogle"
        app:layout_constraintStart_toStartOf="@+id/BTNLoginGoogle"
        app:layout_constraintTop_toTopOf="@+id/BTNLoginGoogle" />

    <EditText
        android:id="@+id/ETEmail"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress|textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/ETPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/IVProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVLoginDesc"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>